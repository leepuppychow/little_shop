<div id="user-show">

<div id="user-block">
  <h1>Your Recent Orders</h1>
  <div id="user-table">
    <table>
      <tr>
        <th>Order ID</th>
        <th>Status</th>
        <th>Total Price</th>
        <th>Address</th>
        <th>Item Count</th>
      </tr>
    <% current_user.orders.each do |order| %>
      <tr>
        <th><%= link_to order.id, order_path(order), class: "order#{order.id}" %></th>
        <th><%= order.status %></th>
        <th><%= number_to_currency(order.total_price) %></th>
        <th><%= order.user.address %></th>
        <th><%= order.items.count %></th>
      </tr>
    <% end %>
    </table>
  </div>
  <div id="login-shop-pair">
    <div >
      <%= link_to "Shop Now!", items_path, class: "user-page-button" %>
    </div>
    <div>
      <%= link_to "Browse Categories", categories_path, class: "user-page-button" %>
    </div>
  </div>
</div>
</div>
